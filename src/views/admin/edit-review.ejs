<div class="my-4 px-2">
    <h2 class="card-title mb-3">Edit review</h2>
    <p class="card-text">You can edit the review using this form.</p>
</div>

<form action="/admin/review/edit/" method="post" class="px-2">

    <input type="text" name="id" value="<%= data._id || data.id || '' %>" hidden>

    <div class="row g-3 mb-3 px-2">
        <label for="review" class="form-label">Review details</label>
        <input type="text" class="form-control mt-1" id="review" name="review" placeholder="User name"
            value="<%= data.review || '' %>" required>
    </div>

    <button type="submit" class="btn btn-primary btn-block mt-3">Update review</button>

</form>

<div class="px-2">
    <% if(error) { %>
        <p class="py-3 text-danger">
            <%= error %>
        </p>
        <% } %>

    <% if(success) { %>
        <p class="py-3 text-success">
            <%= message %>
        </p>
    <% } %>
</div>