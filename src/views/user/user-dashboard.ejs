<h2></h2>

<div class="my-4 px-2">
    <h2 class="card-title mb-3">List of pending reviews</h2>
    <p class="card-text">You can see a list of pending reviews and review an employee.</p>
</div>

<% if(data) { %>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">Created at</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            <% for (var i = 0; i < data.length; i++ ) { %>

                <tr>
                    <th scope="row"><%= i+1 %></th>
                    <td><%= data[i].revieweeEmail %></td>
                    <td><%= data[i].createdAt %></td>
     

                    <td> <a href="/user/review/<%= data[i]._id %>"> review</a> </td>
                </tr>
            
            <% } %>

        </tbody>
    </table>


<% } %> 

<% if(error) { %>
    <p class="py-3 text-danger">
        <%= error %>
    </p>
<% } %>